<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:text="Spots" android:textSize="35dp" android:textStyle="bold" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView5"/>
    <TextView android:text="Spots" android:textSize="20dp" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="@+id/textView6"
              app:layout_constraintBottom_toBottomOf="@+id/textView6"
              app:layout_constraintVertical_bias="0.6" app:layout_constraintStart_toEndOf="@+id/scrollView3"
              android:id="@+id/textView7" android:layout_marginStart="8dp"/>
    <TextView android:text="Favoritos" android:textSize="20dp" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textView6"
              android:padding="5dp"
              android:background="@drawable/shape_corners"
              app:layout_constraintTop_toTopOf="@+id/textView5"
              app:layout_constraintBottom_toBottomOf="@+id/textView5"
              app:layout_constraintEnd_toStartOf="@+id/scrollView3" android:layout_marginEnd="8dp"/>
    <ScrollView
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/scrollView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_outline_crop_square_24px"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/imageView6" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_iconfinder_check_circle_outline_blank_326565"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>